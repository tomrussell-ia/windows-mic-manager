<Application
    x:Class="MicrophoneManager.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MicrophoneManager.WinUI">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Add custom resource dictionaries here when created -->
            </ResourceDictionary.MergedDictionaries>

            <!-- Temporary inline resources for Stage A -->
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#2D2D2D"/>
            <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFF"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
