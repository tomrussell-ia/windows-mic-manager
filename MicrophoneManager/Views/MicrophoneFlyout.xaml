<UserControl x:Class="MicrophoneManager.Views.MicrophoneFlyout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MicrophoneManager.Views"
             xmlns:models="clr-namespace:MicrophoneManager.Models"
             Width="320"
             Background="#2D2D2D">

    <UserControl.Resources>
        <!-- Modern dark theme style -->
        <Style x:Key="MicListItem" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4D4D4D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#5D5D5D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="8" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header (tray: Apps using microphone, dock: Microphone) -->
            <Grid Grid.Row="0" Margin="4,0,4,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#999999"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Apps using microphone"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsDockedMode}" Value="True">
                                    <Setter Property="Text" Value="Microphone"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Dock / Undock -->
                <Button Grid.Column="1"
                        x:Name="DockButton"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Padding="6"
                        Click="DockButton_Click"
                        ToolTip="Dock / Undock">
                    <TextBlock x:Name="DockIcon"
                               Text="&#xE718;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Foreground="#999999"
                               VerticalAlignment="Center"/>
                </Button>

            </Grid>

            <!-- Active Sessions List (scrolls only within this section) -->
            <Grid Grid.Row="1"
                Visibility="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ShowAppsSection, Converter={StaticResource BoolToVisibility}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="110">
                    <ItemsControl ItemsSource="{Binding ActiveSessions}"
                                  Visibility="{Binding HasActiveSessions, Converter={StaticResource BoolToVisibility}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#3D3D3D"
                                        CornerRadius="4"
                                        Padding="10,8"
                                        Margin="4,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- App Icon -->
                                        <Image Grid.Column="0"
                                               Source="{Binding Icon}"
                                               Width="20"
                                               Height="20"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center"/>

                                        <!-- App Name -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding DisplayName}"
                                                   Foreground="White"
                                                   TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- No Apps Message -->
                <TextBlock Text="No apps currently using microphone"
                           Foreground="#666666"
                           FontStyle="Italic"
                           Margin="4,4,0,0"
                           Visibility="{Binding HasNoActiveSessions, Converter={StaticResource BoolToVisibility}}"/>
            </Grid>

            <!-- Separator -->
            <Border Grid.Row="2"
                    Height="1"
                    Background="#404040"
                    Margin="4,12,4,12"
                    Visibility="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ShowAppsSection, Converter={StaticResource BoolToVisibility}}"/>

            <!-- Microphone Selection Header (BOTTOM section) -->
            <TextBlock Grid.Row="3"
                       Text="Select Microphone"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="4,0,0,8"/>

            <!-- Microphone List -->
            <ListBox Grid.Row="4"
                     x:Name="MicrophoneList"
                     ItemsSource="{Binding Microphones}"
                     Background="Transparent"
                     BorderBrush="Transparent"
                     ItemContainerStyle="{StaticResource MicListItem}"
                     MaxHeight="160"
                     SelectionChanged="MicrophoneList_SelectionChanged"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Microphone Icon -->
                            <TextBlock Grid.Column="0"
                                       Text="&#xE720;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>

                            <!-- Device Name -->
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Name}"
                                       TextTrimming="CharacterEllipsis"
                                       VerticalAlignment="Center"/>

                            <!-- Checkmark for default device -->
                            <TextBlock Grid.Column="2"
                                       Text="&#xE73E;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="#0078D4"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Mic Level Slider (0-100) -->
            <Border Grid.Row="5"
                    Background="#3D3D3D"
                    CornerRadius="4"
                    Padding="10,8"
                    Margin="4,12,4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Mic level"
                               Foreground="#999999"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="{Binding CurrentMicLevelPercent, StringFormat={}{0:0}%}"
                               Foreground="#999999"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>

                    <!-- Real-time input meter (dB-style) -->
                    <Border Grid.Row="1" Grid.ColumnSpan="2"
                            x:Name="MicMeterTrack"
                            Height="8"
                            CornerRadius="4"
                            Background="{StaticResource MeterGradientBrush}"
                            Margin="0,8,0,0"
                            ClipToBounds="True"
                            IsHitTestVisible="False">
                        <Grid>
                            <!-- Dim the inactive region (right side) so yellow/red only "shows" when you reach it -->
                            <Border HorizontalAlignment="Left"
                                    Background="#2D2D2D"
                                    Opacity="0.70">
                                <Border.Width>
                                    <MultiBinding Converter="{StaticResource PercentToWidth}" ConverterParameter="remaining">
                                        <Binding Path="CurrentMicInputLevelPercent" />
                                        <Binding ElementName="MicMeterTrack" Path="ActualWidth" />
                                    </MultiBinding>
                                </Border.Width>
                                <Border.RenderTransform>
                                    <TranslateTransform>
                                        <TranslateTransform.X>
                                            <MultiBinding Converter="{StaticResource PercentToWidth}">
                                                <Binding Path="CurrentMicInputLevelPercent" />
                                                <Binding ElementName="MicMeterTrack" Path="ActualWidth" />
                                            </MultiBinding>
                                        </TranslateTransform.X>
                                    </TranslateTransform>
                                </Border.RenderTransform>
                            </Border>

                            <!-- Threshold markers (-20dB and -10dB) using 4*:1*:1* scale (-60..-20, -20..-10, -10..0) -->
                            <Grid Opacity="0.55">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="1" Width="1" Background="#FFFFFF" HorizontalAlignment="Left"/>
                                <Border Grid.Column="2" Width="1" Background="#FFFFFF" HorizontalAlignment="Left"/>
                            </Grid>

                            <!-- Peak-hold line (max hit, lingers then decays) -->
                            <Border Width="2"
                                    Background="#FFFFFF"
                                    Opacity="0.9"
                                    HorizontalAlignment="Left">
                                <Border.RenderTransform>
                                    <TranslateTransform>
                                        <TranslateTransform.X>
                                            <MultiBinding Converter="{StaticResource PercentToWidth}" ConverterParameter="2">
                                                <Binding Path="PeakMicInputLevelPercent" />
                                                <Binding ElementName="MicMeterTrack" Path="ActualWidth" />
                                            </MultiBinding>
                                        </TranslateTransform.X>
                                    </TranslateTransform>
                                </Border.RenderTransform>
                            </Border>

                            <!-- Thin indicator line at the current level -->
                            <Border Width="1"
                                    Background="#FFFFFF"
                                    Opacity="0.75"
                                    HorizontalAlignment="Left">
                                <Border.RenderTransform>
                                    <TranslateTransform>
                                        <TranslateTransform.X>
                                            <MultiBinding Converter="{StaticResource PercentToWidth}" ConverterParameter="1">
                                                <Binding Path="CurrentMicInputLevelPercent" />
                                                <Binding ElementName="MicMeterTrack" Path="ActualWidth" />
                                            </MultiBinding>
                                        </TranslateTransform.X>
                                    </TranslateTransform>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- dB scale under the meter (keeps the bar clear so the peak line is easy to see) -->
                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,4,0,0" Opacity="0.75">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="-60" Foreground="#999999" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="1" Text="-20" Foreground="#999999" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="2" Text="-10" Foreground="#999999" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="2" Text="0" Foreground="#999999" FontSize="10" HorizontalAlignment="Right"/>
                    </Grid>

                    <Slider Grid.Row="3" Grid.ColumnSpan="2"
                            Margin="0,8,0,0"
                            Minimum="0"
                            Maximum="100"
                            Value="{Binding CurrentMicLevelPercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Border>

            <!-- Mute Button -->
                <Button Grid.Row="6"
                    x:Name="MuteButton"
                    Style="{StaticResource ModernButton}"
                    Click="MuteButton_Click"
                    Margin="0,12,0,0"
                    HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="MuteIcon"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="MuteText" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            </Grid>
    </Border>
</UserControl>
