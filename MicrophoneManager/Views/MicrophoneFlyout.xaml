<UserControl x:Class="MicrophoneManager.Views.MicrophoneFlyout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MicrophoneManager.Views"
             xmlns:models="clr-namespace:MicrophoneManager.Models"
             Width="320"
             Background="#2D2D2D">

    <UserControl.Resources>
        <!-- Modern dark theme style -->
        <Style x:Key="MicListItem" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4D4D4D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#5D5D5D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="8" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="4,0,4,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#999999"
                           VerticalAlignment="Center"
                           Text="Microphones" />

                <!-- Dock / Undock -->
                <Button Grid.Column="1"
                        x:Name="DockButton"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Padding="6"
                        Click="DockButton_Click"
                        ToolTip="Dock / Undock">
                    <TextBlock x:Name="DockIcon"
                               Text="&#xE718;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Foreground="#999999"
                               VerticalAlignment="Center"/>
                </Button>

            </Grid>

            <!-- Microphone Selection Header -->
            <TextBlock Grid.Row="1"
                       Text="Select Microphone"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="4,0,0,8"/>

            <!-- Microphone List -->
            <ListBox Grid.Row="2"
                     x:Name="MicrophoneList"
                     ItemsSource="{Binding Microphones}"
                     Background="Transparent"
                     BorderBrush="Transparent"
                     ItemContainerStyle="{StaticResource MicListItem}"
                     MaxHeight="360"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#3D3D3D"
                                CornerRadius="6"
                                Padding="10"
                                Margin="4,4,4,8">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="&#xE720;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="18"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding FormatTag}"
                                                   Foreground="#AAAAAA"
                                                   FontSize="11"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2"
                                                Orientation="Vertical"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Spacing="4">
                                        <Border Background="#1E88E5"
                                                CornerRadius="4"
                                                Padding="6,2"
                                                Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibility}}">
                                            <TextBlock Text="Default"
                                                       Foreground="White"
                                                       FontSize="11"/>
                                        </Border>
                                        <Border Background="#6A1B9A"
                                                CornerRadius="4"
                                                Padding="6,2"
                                                Visibility="{Binding IsDefaultCommunication, Converter={StaticResource BoolToVisibility}}">
                                            <TextBlock Text="Communications"
                                                       Foreground="White"
                                                       FontSize="11"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,8,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Input"
                                                   Grid.Column="0"
                                                   Foreground="#AAAAAA"/>
                                        <TextBlock Text="{Binding InputLevelPercent, StringFormat={}{0:0}%}"
                                                   Grid.Column="1"
                                                   Foreground="#AAAAAA"/>
                                    </Grid>

                                    <Border Grid.Row="1"
                                            x:Name="DeviceMeterTrack"
                                            Height="8"
                                            CornerRadius="4"
                                            Background="{StaticResource MeterGradientBrush}"
                                            Margin="0,6,0,0"
                                            ClipToBounds="True"
                                            IsHitTestVisible="False">
                                        <Grid>
                                            <Border HorizontalAlignment="Left"
                                                    Background="#2D2D2D"
                                                    Opacity="0.70">
                                                <Border.Width>
                                                    <MultiBinding Converter="{StaticResource PercentToWidth}" ConverterParameter="remaining">
                                                        <Binding Path="InputLevelPercent" />
                                                        <Binding ElementName="DeviceMeterTrack" Path="ActualWidth" />
                                                    </MultiBinding>
                                                </Border.Width>
                                                <Border.RenderTransform>
                                                    <TranslateTransform>
                                                        <TranslateTransform.X>
                                                            <MultiBinding Converter="{StaticResource PercentToWidth}">
                                                                <Binding Path="InputLevelPercent" />
                                                                <Binding ElementName="DeviceMeterTrack" Path="ActualWidth" />
                                                            </MultiBinding>
                                                        </TranslateTransform.X>
                                                    </TranslateTransform>
                                                </Border.RenderTransform>
                                            </Border>

                                            <Border Width="2"
                                                    Background="#FFFFFF"
                                                    Opacity="0.9"
                                                    HorizontalAlignment="Left">
                                                <Border.RenderTransform>
                                                    <TranslateTransform>
                                                        <TranslateTransform.X>
                                                            <MultiBinding Converter="{StaticResource PercentToWidth}" ConverterParameter="2">
                                                                <Binding Path="PeakLevelPercent" />
                                                                <Binding ElementName="DeviceMeterTrack" Path="ActualWidth" />
                                                            </MultiBinding>
                                                        </TranslateTransform.X>
                                                    </TranslateTransform>
                                                </Border.RenderTransform>
                                            </Border>

                                            <Border Width="1"
                                                    Background="#FFFFFF"
                                                    Opacity="0.75"
                                                    HorizontalAlignment="Left">
                                                <Border.RenderTransform>
                                                    <TranslateTransform>
                                                        <TranslateTransform.X>
                                                            <MultiBinding Converter="{StaticResource PercentToWidth}" ConverterParameter="1">
                                                                <Binding Path="InputLevelPercent" />
                                                                <Binding ElementName="DeviceMeterTrack" Path="ActualWidth" />
                                                            </MultiBinding>
                                                        </TranslateTransform.X>
                                                    </TranslateTransform>
                                                </Border.RenderTransform>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center" Spacing="8">
                                    <Slider Width="170"
                                            Minimum="0"
                                            Maximum="100"
                                            Value="{Binding VolumePercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                    <Button Style="{StaticResource ModernButton}"
                                            Command="{Binding ToggleMuteCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                       FontSize="12"
                                                       Margin="0,0,4,0"
                                                       Text="{Binding IsMuted, Converter={StaticResource MuteStateToIcon}}"/>
                                            <TextBlock Text="{Binding IsMuted, Converter={StaticResource MuteStateToLabel}}"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="6">
                                    <Button Style="{StaticResource ModernButton}" Content="Default" Command="{Binding SetDefaultCommand}"/>
                                    <Button Style="{StaticResource ModernButton}" Content="Communications" Command="{Binding SetDefaultCommunicationCommand}"/>
                                    <Button Style="{StaticResource ModernButton}" Content="Set Both" Command="{Binding SetBothCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Grid.Row="3"
                       Text="No microphones detected"
                       Foreground="#AAAAAA"
                       Margin="4,8,0,0"
                       Visibility="{Binding HasNoMicrophones, Converter={StaticResource BoolToVisibility}}"/>
            <!-- Mute Button -->
            <Button Grid.Row="4"
                    x:Name="MuteButton"
                    Style="{StaticResource ModernButton}"
                    Click="MuteButton_Click"
                    Margin="0,12,0,0"
                    HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="MuteIcon"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="MuteText" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            </Grid>
    </Border>
</UserControl>
