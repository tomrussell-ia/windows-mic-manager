<UserControl x:Class="MicrophoneManager.Views.MicrophoneFlyout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MicrophoneManager.Views"
             xmlns:models="clr-namespace:MicrophoneManager.Models"
             MinWidth="370"
             Background="#2D2D2D">

    <UserControl.Resources>
        <!-- Modern dark theme style -->
        <Style x:Key="MicListItem" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4D4D4D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#5D5D5D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small icon-only action buttons used inside microphone cards -->
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Compact slider used inside microphone cards -->
        <Style x:Key="CompactSlider" TargetType="Slider">
            <Setter Property="Height" Value="18"/>
            <Setter Property="MinHeight" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid SnapsToDevicePixels="True">
                            <Track x:Name="PART_Track" VerticalAlignment="Center">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge"
                                                  Background="#0078D4"
                                                  BorderThickness="0">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        Height="4"
                                                        CornerRadius="2"
                                                        VerticalAlignment="Center" />
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge"
                                                  Background="#2D2D2D"
                                                  BorderThickness="0">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        Height="4"
                                                        CornerRadius="2"
                                                        VerticalAlignment="Center" />
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="14" Height="14">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#FFFFFF"
                                                        BorderBrush="#AAAAAA"
                                                        BorderThickness="1"
                                                        CornerRadius="2" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border>
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="8"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsDockedMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                        <Setter Property="CornerRadius" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="2,0,2,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#999999"
                           VerticalAlignment="Center"
                           Text="Microphones" />

                <!-- Dock / Undock -->
                <Button Grid.Column="1"
                        x:Name="DockButton"
                        Background="Transparent"
                        BorderBrush="Transparent"
                    Padding="4"
                        Click="DockButton_Click"
                        ToolTip="Dock / Undock">
                    <TextBlock x:Name="DockIcon"
                               Text="&#xE718;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Foreground="#999999"
                               VerticalAlignment="Center"/>
                </Button>

            </Grid>

            <!-- Microphone Selection Header removed per UX update -->

            <!-- Microphone List -->
            <ScrollViewer Grid.Row="2"
                          MaxHeight="360"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ListBox x:Name="MicrophoneList"
                         ItemsSource="{Binding Microphones}"
                         Background="Transparent"
                         BorderBrush="Transparent"
                         ItemContainerStyle="{StaticResource MicListItem}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                        <Border Background="#3D3D3D"
                                CornerRadius="6"
                            Padding="6"
                            Margin="3,2,3,4">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.RowSpan="2"
                                               Grid.Column="0"
                                               Text="&#xE720;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="18"
                                               VerticalAlignment="Center"
                                               Margin="0,0,6,0"/>

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               Text="{Binding Name}"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center"/>

                                    <!-- Default/Comms actions (right, aligned with title) -->
                                    <StackPanel Grid.Row="0"
                                                Grid.Column="2"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Button Command="{Binding SetDefaultCommand}"
                                                Margin="0,0,6,0"
                                                ToolTip="Set Default">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource IconActionButton}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDefault}" Value="True">
                                                            <Setter Property="Background" Value="#1E88E5"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                       Text="&#xE720;"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Button>

                                        <Button Command="{Binding SetDefaultCommunicationCommand}"
                                                ToolTip="Set Communications">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource IconActionButton}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDefaultCommunication}" Value="True">
                                                            <Setter Property="Background" Value="#6A1B9A"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                       Text="&#xE8BD;"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Button>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               Text="{Binding FormatTag}"
                                               Foreground="#AAAAAA"
                                               FontSize="11"/>
                                </Grid>

                                <Grid Margin="0,4,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Input"
                                                   Grid.Column="0"
                                                   Foreground="#AAAAAA"/>
                                        <TextBlock Text="{Binding InputLevelPercent, StringFormat={}{0:0}%}"
                                                   Grid.Column="1"
                                                   Foreground="#AAAAAA"/>
                                    </Grid>

                                    <Border Grid.Row="1"
                                            x:Name="DeviceMeterTrack"
                                            Height="8"
                                            CornerRadius="4"
                                            Background="{StaticResource MeterGradientBrush}"
                                            Margin="0,3,0,0"
                                            ClipToBounds="True"
                                            IsHitTestVisible="False">
                                        <Grid>
                                            <Border HorizontalAlignment="Left"
                                                    Background="#2D2D2D"
                                                    Opacity="0.70">
                                                <Border.Width>
                                                    <MultiBinding Converter="{StaticResource PercentToWidth}" ConverterParameter="remaining">
                                                        <Binding Path="InputLevelPercent" />
                                                        <Binding ElementName="DeviceMeterTrack" Path="ActualWidth" />
                                                    </MultiBinding>
                                                </Border.Width>
                                                <Border.RenderTransform>
                                                    <TranslateTransform>
                                                        <TranslateTransform.X>
                                                            <MultiBinding Converter="{StaticResource PercentToWidth}">
                                                                <Binding Path="InputLevelPercent" />
                                                                <Binding ElementName="DeviceMeterTrack" Path="ActualWidth" />
                                                            </MultiBinding>
                                                        </TranslateTransform.X>
                                                    </TranslateTransform>
                                                </Border.RenderTransform>
                                            </Border>

                                            <Border Width="2"
                                                    Background="#FFFFFF"
                                                    Opacity="0.9"
                                                    HorizontalAlignment="Left">
                                                <Border.RenderTransform>
                                                    <TranslateTransform>
                                                        <TranslateTransform.X>
                                                            <MultiBinding Converter="{StaticResource PercentToWidth}" ConverterParameter="2">
                                                                <Binding Path="PeakLevelPercent" />
                                                                <Binding ElementName="DeviceMeterTrack" Path="ActualWidth" />
                                                            </MultiBinding>
                                                        </TranslateTransform.X>
                                                    </TranslateTransform>
                                                </Border.RenderTransform>
                                            </Border>

                                            <Border Width="1"
                                                    Background="#FFFFFF"
                                                    Opacity="0.75"
                                                    HorizontalAlignment="Left">
                                                <Border.RenderTransform>
                                                    <TranslateTransform>
                                                        <TranslateTransform.X>
                                                            <MultiBinding Converter="{StaticResource PercentToWidth}" ConverterParameter="1">
                                                                <Binding Path="InputLevelPercent" />
                                                                <Binding ElementName="DeviceMeterTrack" Path="ActualWidth" />
                                                            </MultiBinding>
                                                        </TranslateTransform.X>
                                                    </TranslateTransform>
                                                </Border.RenderTransform>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- Simple scale under the meter (0..100) -->
                                    <Grid Grid.Row="2" Margin="0,1,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="7"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <UniformGrid Grid.Row="0" Columns="6" HorizontalAlignment="Stretch">
                                            <Border Width="1" Height="5" Background="#FFFFFF" Opacity="0.35" HorizontalAlignment="Left"/>
                                            <Border Width="1" Height="5" Background="#FFFFFF" Opacity="0.35" HorizontalAlignment="Center"/>
                                            <Border Width="1" Height="5" Background="#FFFFFF" Opacity="0.35" HorizontalAlignment="Center"/>
                                            <Border Width="1" Height="5" Background="#FFFFFF" Opacity="0.35" HorizontalAlignment="Center"/>
                                            <Border Width="1" Height="5" Background="#FFFFFF" Opacity="0.35" HorizontalAlignment="Center"/>
                                            <Border Width="1" Height="5" Background="#FFFFFF" Opacity="0.35" HorizontalAlignment="Right"/>
                                        </UniformGrid>

                                        <UniformGrid Grid.Row="1" Columns="6" HorizontalAlignment="Stretch">
                                            <TextBlock Text="0" Foreground="#AAAAAA" FontSize="9" HorizontalAlignment="Left"/>
                                            <TextBlock Text="20" Foreground="#AAAAAA" FontSize="9" HorizontalAlignment="Center"/>
                                            <TextBlock Text="40" Foreground="#AAAAAA" FontSize="9" HorizontalAlignment="Center"/>
                                            <TextBlock Text="60" Foreground="#AAAAAA" FontSize="9" HorizontalAlignment="Center"/>
                                            <TextBlock Text="80" Foreground="#AAAAAA" FontSize="9" HorizontalAlignment="Center"/>
                                            <TextBlock Text="100" Foreground="#AAAAAA" FontSize="9" HorizontalAlignment="Right"/>
                                        </UniformGrid>
                                    </Grid>
                                </Grid>

                                <Grid Margin="0,4,0,0" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Mute (left, aligned with slider) -->
                                    <Button Grid.Column="0"
                                            Style="{StaticResource IconActionButton}"
                                            Command="{Binding ToggleMuteCommand}"
                                            Margin="0,0,6,0"
                                            ToolTip="{Binding IsMuted, Converter={StaticResource MuteStateToLabel}}">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="{Binding IsMuted, Converter={StaticResource MuteStateToIcon}}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                    </Button>

                                    <Slider Grid.Column="1"
                                            Minimum="0"
                                            Maximum="100"
                                            HorizontalAlignment="Stretch"
                                            Style="{StaticResource CompactSlider}"
                                            Value="{Binding VolumePercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>


                            </StackPanel>
                        </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>

            <TextBlock Grid.Row="3"
                       Text="No microphones detected"
                       Foreground="#AAAAAA"
                       Margin="4,6,0,0"
                       Visibility="{Binding HasNoMicrophones, Converter={StaticResource BoolToVisibility}}"/>
            <!-- Global mute button removed; per-mic mute remains on each card -->
                </Grid>
            </Border>
</UserControl>
