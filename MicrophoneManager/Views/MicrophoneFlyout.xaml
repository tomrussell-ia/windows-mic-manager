<UserControl x:Class="MicrophoneManager.Views.MicrophoneFlyout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MicrophoneManager.Views"
             xmlns:models="clr-namespace:MicrophoneManager.Models"
             Width="320"
             Background="#2D2D2D">

    <UserControl.Resources>
        <!-- Modern dark theme style -->
        <Style x:Key="MicListItem" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4D4D4D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#5D5D5D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="8" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Apps Using Microphone Section (TOP) -->
            <TextBlock Grid.Row="0"
                       Text="Apps using microphone"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#999999"
                       Margin="4,0,0,8"/>

            <!-- Active Sessions List - no max height, shows all apps -->
            <ItemsControl Grid.Row="1"
                          ItemsSource="{Binding ActiveSessions}"
                          Visibility="{Binding HasActiveSessions, Converter={StaticResource BoolToVisibility}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#3D3D3D"
                                CornerRadius="4"
                                Padding="10,8"
                                Margin="4,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- App Icon -->
                                <Image Grid.Column="0"
                                       Source="{Binding Icon}"
                                       Width="20"
                                       Height="20"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>

                                <!-- App Name -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding DisplayName}"
                                           Foreground="White"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- No Apps Message -->
            <TextBlock Grid.Row="1"
                       Text="No apps currently using microphone"
                       Foreground="#666666"
                       FontStyle="Italic"
                       Margin="4,4,0,0"
                       Visibility="{Binding HasNoActiveSessions, Converter={StaticResource BoolToVisibility}}"/>

            <!-- Separator -->
            <Border Grid.Row="2"
                    Height="1"
                    Background="#404040"
                    Margin="4,12,4,12"/>

            <!-- Microphone Selection Header (BOTTOM section) -->
            <TextBlock Grid.Row="3"
                       Text="Select Microphone"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="4,0,0,8"/>

            <!-- Microphone List -->
            <ListBox Grid.Row="4"
                     x:Name="MicrophoneList"
                     ItemsSource="{Binding Microphones}"
                     Background="Transparent"
                     BorderBrush="Transparent"
                     ItemContainerStyle="{StaticResource MicListItem}"
                     MaxHeight="200"
                     SelectionChanged="MicrophoneList_SelectionChanged"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Microphone Icon -->
                            <TextBlock Grid.Column="0"
                                       Text="&#xE720;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>

                            <!-- Device Name -->
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Name}"
                                       TextTrimming="CharacterEllipsis"
                                       VerticalAlignment="Center"/>

                            <!-- Checkmark for default device -->
                            <TextBlock Grid.Column="2"
                                       Text="&#xE73E;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="#0078D4"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Mute Button -->
            <Button Grid.Row="5"
                    x:Name="MuteButton"
                    Style="{StaticResource ModernButton}"
                    Click="MuteButton_Click"
                    Margin="0,12,0,0"
                    HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="MuteIcon"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="MuteText" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Border>
</UserControl>
